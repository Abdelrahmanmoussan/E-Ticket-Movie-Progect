@model E_Ticket.Models.Actor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Actor</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #141414;
            color: white;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 500px;
            margin-top: 50px;
            background-color: #222;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
        }

        .form-label {
            font-weight: bold;
            color: #fff;
        }

        .form-control {
            background-color: #333;
            color: white;
            border: 1px solid #444;
        }

            .form-control:focus {
                border-color: #dc3545;
                box-shadow: 0 0 5px #dc3545;
            }

        .btn-primary {
            background-color: #dc3545;
            border: none;
            width: 100%;
            padding: 10px;
            font-size: 1.1rem;
            transition: 0.3s;
        }

            .btn-primary:hover {
                background-color: #ff5555;
            }

        .image-preview {
            text-align: center;
            margin-top: 10px;
        }

            .image-preview img {
                width: 100px;
                height: 100px;
                border-radius: 50%;
                object-fit: cover;
                border: 3px solid #dc3545;
                display: none;
            }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 15px;
            color: #bbb;
            text-decoration: none;
            transition: 0.3s;
        }

            .back-link:hover {
                color: #fff;
            }
    </style>
</head>
<body>

    <div class="container">
        <h2 class="text-center mb-4">➕ Add a New Actor</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter first name">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control" placeholder="Enter last name">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Bio" class="form-label">Biography</label>
                <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Write a short biography"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Actor Picture</label>
                <input type="file" class="form-control" id="ProfilePicture" name="file" accept="image/*" onchange="previewImage(event)">
                <div class="image-preview">
                    <img id="imgPreview" src="#" alt="Image Preview">
                </div>
                <span class="text-danger" asp-validation-for="ProfilePicture"></span>
            </div>

            <div class="mb-3">
                <label asp-for="News" class="form-label">Latest News</label>
                <input asp-for="News" class="form-control" placeholder="Enter latest news">
                <span asp-validation-for="News" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">✅ Create Actor</button>
        </form>

        <a asp-action="ActorList" class="back-link">⬅ Back to List</a>
    </div>

    <script>
        function previewImage(event) {
            var imgPreview = document.getElementById('imgPreview');
            var file = event.target.files[0];

            if (file) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    imgPreview.src = e.target.result;
                    imgPreview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        }
    </script>

</body>
</html>

@model E_Ticket.Models.Actor

@{
    ViewData["Title"] = "Actor Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actor Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #141414;
            color: white;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 40px;
        }

        .actor-card {
            background-color: #222;
            border-radius: 10px;
            overflow: hidden;
            padding: 20px;
            display: flex;
            align-items: center;
            box-shadow: 0 4px 10px rgba(255, 255, 255, 0.1);
            transition: transform 0.3s;
        }

            .actor-card:hover {
                transform: scale(1.02);
            }

        .actor-img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 20px;
            border: 3px solid red;
        }

        .actor-info {
            flex: 1;
        }

        .actor-name {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 10px;
            color: #e50914;
        }

        .actor-bio {
            font-size: 1rem;
            color: #bbb;
        }

        .news-section {
            margin-top: 30px;
            background-color: #222;
            padding: 15px;
            border-radius: 10px;
        }

        .btn-group a {
            margin: 5px;
            text-decoration: none;
            font-size: 1rem;
        }

        .btn-custom {
            background-color: red;
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 5px;
            transition: background 0.3s;
        }

            .btn-custom:hover {
                background-color: darkred;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mb-4">🎭 Actor Details</h2>

        <div class="actor-card">
            <img src="~/images/cast/@Model.ProfilePicture" alt="@Model.FirstName @Model.LastName" class="actor-img">
            <div class="actor-info">
                <div class="actor-name">@Model.FirstName @Model.LastName</div>
                <p class="actor-bio">@Model.Bio</p>
            </div>
        </div>

        <div class="news-section">
            <h4>📰 Latest News</h4>
            <p>@Model.News</p>
        </div>

        <div class="d-flex justify-content-center mt-4">
            <a asp-action="Edit" asp-route-actorId="@Model?.Id" class="btn btn-custom">✏ Edit</a>
            <a asp-action="ActorList" class="btn btn-secondary ms-3">🔙 Back to List</a>
        </div>
    </div>
</body>
</html>

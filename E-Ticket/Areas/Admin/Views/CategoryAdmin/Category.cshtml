@model IEnumerable<E_Ticket.Models.Category>

@{
    ViewData["Title"] = "Category";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h2 class="text-white">🎬 Categories</h2>
        <a asp-action="Create" class="btn btn-danger"><i class="fas fa-plus"></i> Add New Category</a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover">
            <thead class="bg-danger text-white">
                <tr>
                    <th class="text-center">Category Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mx-1">
                                <i class="fas fa-eye"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Styles -->
<style>
    body {
        background-color: #141414;
        color: white;
    }

    .table {
        border-radius: 10px;
        overflow: hidden;
    }

    .btn {
        transition: 0.3s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    .table thead tr {
        border-bottom: 2px solid #ff0000;
    }

    .table tbody tr:hover {
        background-color: #222;
    }
</style>

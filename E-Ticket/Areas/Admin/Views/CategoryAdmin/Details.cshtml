
@model E_Ticket.Models.Category

@{
    ViewData["Title"] = "Category Details";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        background-color: #141414;
        color: #fff;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 800px;
        background: #222;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.9);
        margin-top: 50px;
    }

    h1, h4 {
        color: #e50914;
        font-size: 2.5rem;
        font-weight: bold;
        text-align: center;
    }

    .form-control {
        background: #333;
        border: 2px solid #e50914;
        color: #fff;
        font-size: 1.2rem;
        padding: 10px;
        border-radius: 8px;
    }

    .btn-primary {
        background: #e50914;
        border: none;
        transition: 0.3s;
        font-size: 1.2rem;
        padding: 12px;
        border-radius: 8px;
        width: 100%;
    }

        .btn-primary:hover {
            background: #b20710;
            transform: scale(1.05);
        }

    a {
        color: #e50914;
        text-decoration: none;
        font-size: 1.2rem;
        display: block;
        text-align: center;
        margin-top: 20px;
    }

        a:hover {
            text-decoration: underline;
        }

    .row {
        display: flex;
        justify-content: center;
    }
</style>

<div class="container mt-5">
    <h1>Category Details</h1>
    <h4>Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">Category Name:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
    </dl>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-categoryId="@Model?.Id" class="btn btn-primary">Edit</a>
    </div>
    <div class="mt-3 text-center">
        <a asp-action="Category">Back to List</a>
    </div>
</div>

@model E_Ticket.Models.Cinema

@{
    ViewData["Title"] = "Edit Cinema";
}

<div class="container">
    <h2 class="text-center mb-4">✏️ Edit Cinema</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Cinema Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter cinema name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Short description..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Cinema Logo</label>
            <input type="file" class="form-control" id="CinemaLogo" name="file" accept="image/*" onchange="previewImage(event)">
            <div class="image-preview">
                <img id="imgPreview" src="#" alt="Image Preview" style="display:none;">
            </div>
            <span class="text-danger" asp-validation-for="CinemaLogo"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input asp-for="Address" class="form-control" placeholder="Cinema address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">💾 Save Changes</button>
    </form>

    <a asp-action="Cinemas" class="back-link">⬅ Back to List</a>
</div>

<script>
    function previewImage(event) {
        var imgPreview = document.getElementById('imgPreview');
        var file = event.target.files[0];

        if (file) {
            var reader = new FileReader();
            reader.onload = function(e) {
                imgPreview.src = e.target.result;
                imgPreview.style.display = 'block';
            }
            reader.readAsDataURL(file);
        }
    }
</script>

<style>
    body {
        background-color: #141414;
        color: white;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 500px;
        margin-top: 50px;
        background-color: #222;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
    }

    .form-label {
        font-weight: bold;
        color: #fff;
    }

    .form-control {
        background-color: #333;
        color: white;
        border: 1px solid #444;
    }

        .form-control:focus {
            border-color: #dc3545;
            box-shadow: 0 0 5px #dc3545;
        }

    .btn-primary {
        background-color: #dc3545;
        border: none;
        width: 100%;
        padding: 10px;
        font-size: 1.1rem;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #ff5555;
        }

    .image-preview {
        text-align: center;
        margin-top: 10px;
    }

        .image-preview img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #dc3545;
        }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #bbb;
        text-decoration: none;
        transition: 0.3s;
    }

        .back-link:hover {
            color: #fff;
        }
</style>

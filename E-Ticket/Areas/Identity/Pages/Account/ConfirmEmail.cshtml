@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="confirm-container">
    <h1>@ViewData["Title"]</h1>
    <div class="status-message">
        <partial name="_StatusMessage" model="Model.StatusMessage" />
    </div>
</div>

<style>
    /* Dark Mode Styling */
    body {
        background: #121212;
        color: #e0e0e0;
        font-family: 'Arial', sans-serif;

    }

    .confirm-container {
        background: #181818;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.15);
        max-width: 600px;
        margin: auto;
        margin-top: 50px; /* Space from the header */
    }

    h1 {
        color: #ffffff;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .status-message {
        background: #252525; /* Darker background to match theme */
        color: #e0e0e0;
        padding: 15px;
        border-radius: 6px;
        margin-top: 15px;
    }

    a {
        color: #e50914;
        font-weight: bold;
        text-decoration: none;
    }

        a:hover {
            color: #b20710;
        }
</style>

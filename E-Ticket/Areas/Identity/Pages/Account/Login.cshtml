@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    /* Dark Mode Styling */
    body {
        background: #121212;
        color: #e0e0e0;
        font-family: 'Arial', sans-serif;
    }

    .login-container {
        background: #181818;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.1);
        max-width: 450px;
        margin: auto;
        margin-top: 50px;
    }

        .login-container h2 {
            color: #ffffff;
            text-align: center;
            font-weight: bold;
        }

        .login-container p {
            text-align: center;
            color: #bbb;
        }

    .form-control {
        background: #333;
        border: 1px solid #555;
        color: #fff;
    }

        .form-control:focus {
            background: #444;
            border-color: #e50914;
            box-shadow: none;
        }

    label {
        color: #e0e0e0;
    }

    .btn-primary {
        background: #e50914;
        border: none;
        font-weight: bold;
        padding: 12px;
        border-radius: 6px;
        width: 100%;
    }

        .btn-primary:hover {
            background: #b20710;
        }

    .checkbox label {
        color: #e0e0e0;
    }

    a {
        color: #e50914;
    }

        a:hover {
            color: #b20710;
        }
</style>

<div class="login-container">
    <h2>Welcome Back</h2>
    <p>Log in to continue watching your favorites.</p>
    <hr />

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="Password" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="checkbox mb-3">
            <label asp-for="Input.RememberMe">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                Remember Me
            </label>
        </div>

        <button id="login-submit" type="submit" class="btn btn-primary">Log In</button>

        <div class="text-center mt-3">
            <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a></p>
            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create a new account</a></p>
            <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend confirmation email</a></p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<!-- Profile Container -->
<div class="profile-container">
    <h2><i class="fas fa-user-circle"></i> @ViewData["Title"]</h2>
    <p>Manage your account settings</p>

    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <!-- Username (Disabled) -->
        <div class="form-group mb-4">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" disabled />
        </div>

        <!-- Phone Number -->
        <div class="form-group mb-4">
            <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Address-->
        <div class="form-group mb-4">
            <label asp-for="Input.Address" class="form-label">Address</label>
            <input asp-for="Input.Address" class="form-control" />
            <span asp-validation-for="Input.Address" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Input.Age" class="form-label">Age</label>
            <input asp-for="Input.Age" class="form-control" />
            <span asp-validation-for="Input.Age" class="text-danger"></span>
        </div>


        <!-- Save Button -->
        <button id="update-profile-button" type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Save Changes
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Netflix-Inspired Dark Theme */
    body {
        background: #141414;
        color: #e5e5e5;
        font-family: 'Helvetica Neue', Arial, sans-serif;
    }

    /* Profile Form Container */
    .profile-container {
        background: #181818;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(255, 255, 255, 0.1);
        max-width: 420px;
        margin: auto;
        margin-top: 60px;
        text-align: center;
    }

        .profile-container h2 {
            color: #ffffff;
            font-weight: bold;
            margin-bottom: 10px;
            font-size: 24px;
        }

        .profile-container p {
            color: #b3b3b3;
            margin-bottom: 20px;
        }

    /* Form Labels */
    .form-label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
        color: #e5e5e5;
        text-align: left;
    }

    /* Input Fields */
    .form-control {
        background: #222;
        border: 1px solid #444;
        color: #fff;
        border-radius: 8px;
        padding: 12px;
        width: 100%;
        transition: 0.3s ease-in-out;
    }

        .form-control:focus {
            background: #333;
            border-color: #e50914;
            box-shadow: 0 0 8px rgba(229, 9, 20, 0.5);
        }

    /* Disabled Input Styling */
    input[disabled] {
        background: #252525 !important;
        color: #888 !important;
        border: 1px solid #444 !important;
    }

    /* Save Button */
    .btn-primary {
        background: #e50914;
        border: none;
        font-weight: bold;
        padding: 14px;
        border-radius: 8px;
        width: 100%;
        margin-top: 15px;
        font-size: 16px;
        transition: all 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background: #b20710;
            transform: scale(1.05);
        }

        .btn-primary:active {
            background: #900505;
            transform: scale(0.98);
        }

    /* Validation Message */
    .text-danger {
        font-size: 0.85rem;
    }
</style>

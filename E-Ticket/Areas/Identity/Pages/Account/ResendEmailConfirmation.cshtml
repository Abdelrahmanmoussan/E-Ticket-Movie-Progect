@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<style>
    /* Dark Mode Styling */
    body {
        background: #121212;
        color: #e0e0e0;
        font-family: 'Arial', sans-serif;
    }

    .login-container {
        background: #181818;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.1);
        max-width: 450px;
        margin: auto;
        margin-top: 50px;
    }

        .login-container h2 {
            color: #ffffff;
            text-align: center;
            font-weight: bold;
        }

        .login-container p {
            text-align: center;
            color: #bbb;
        }

    .form-control {
        background: #333;
        border: 1px solid #555;
        color: #fff;
    }

        .form-control:focus {
            background: #444;
            border-color: #e50914;
            box-shadow: none;
        }

    label {
        color: #e0e0e0;
    }

    .btn-primary {
        background: #e50914;
        border: none;
        font-weight: bold;
        padding: 12px;
        border-radius: 6px;
        width: 100%;
    }

        .btn-primary:hover {
            background: #b20710;
        }

    .checkbox label {
        color: #e0e0e0;
    }

    a {
        color: #e50914;
    }

        a:hover {
            color: #b20710;
        }
</style>

<div class="login-container">
    <h2>@ViewData["Title"]</h2>
    <p>Enter your email to receive a new confirmation link.</p>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
            <label asp-for="Input.Email"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Resend Confirmation</button>
    </form>
</div>

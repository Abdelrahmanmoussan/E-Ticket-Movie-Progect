<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Admin Dashboard" />
    <title>Admin Dashboard - Movie Hub</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico" />

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #141414;
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: #181818;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            transition: all 0.3s;
        }

            .sidebar a {
                color: white;
                display: flex;
                align-items: center;
                padding: 12px 20px;
                text-decoration: none;
                font-size: 18px;
                transition: 0.3s;
            }

                .sidebar a i {
                    margin-right: 10px;
                }

                .sidebar a:hover {
                    background: red;
                    border-radius: 5px;
                }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            transition: all 0.3s;
            min-height: 100vh;
        }

        /* Navbar */
        .navbar {
            background: #181818;
            padding: 15px;
        }

        .navbar-brand {
            font-weight: bold;
        }

        .user-dropdown {
            color: white;
            text-decoration: none;
            padding: 10px 15px;
            display: flex;
            align-items: center;
            border-radius: 5px;
            transition: 0.3s;
        }

            .user-dropdown:hover {
                background: #333;
            }

        /* Footer */
        .footer {
            background: #181818;
            text-align: center;
            padding: 10px;
            width: 100%;
            color: #bbb;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h3 class="text-center text-white">🎬</h3>
        <a href="/Admin/Home/Index"><i class="fas fa-tachometer-alt"></i> <span>Dashboard</span></a>
        <a href="/Admin/MovieAdmin/Movie"><i class="fas fa-film"></i> <span>Movies</span></a>
        <a href="/Admin/Users"><i class="fas fa-users"></i> <span>Users</span></a>
        <a href="/Admin/ActorAdmin/ActorList"><i class="fas fa-Actors"></i>🎭 <span>Actors</span></a>
        <a href="/Admin/CategoryAdmin/Category"><i class="fas fa-th-list"></i> <span>Categories</span></a>
        <a href="/Admin/Settings"><i class="fas fa-cogs"></i> <span>Settings</span></a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid d-flex justify-content-between">
                <a class="navbar-brand" href="#">Movie Hub Admin</a>
                <a href="#" class="user-dropdown"><i class="fas fa-user-circle"></i> Admin</a>
            </div>
        </nav>

        <main role="main">
            @RenderBody()
        </main>

        <footer class="footer">
            <p>&copy; 2024 Movie Hub Admin. All Rights Reserved.</p>
        </footer>
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ Fix: Render the Scripts section if it exists -->
    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>
